<UserControl x:Class="BookDatabase.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDatabase"
        mc:Ignorable="d"  
        Height="720" Width="1280">

    <Grid>
        <Button Margin="0,0,1055,641" Width="225" FontSize="32">Knihy</Button>
        <Button Margin="225,0,830,641" Width="225" FontSize="32">Autoři</Button>
        <Button Margin="20,92,1076,569" FontSize="25" Click="AddBookButton">Přidat knihu</Button>
        <Button Margin="515,10,572,647" FontSize="25">Vyhledat</Button>
        <TextBox Margin="515,92,572,595" FontSize="20"  ></TextBox>

        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Margin="766,26,0,0">Seřadit podle:</TextBlock>
        <ComboBox Margin="937,27,127,660">
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="ABCasc">Abecedně (od A)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="ABCdsc">Abecedně (od Z)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="LENasc">Počet stran (od nejmenší)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="LENdsc">Počet stran (Od největší)</ComboBoxItem>
        </ComboBox>


        <Grid Margin="0,176,1018,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Margin="0,0,0,10">

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber autora:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchTextAuthor, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl ItemsSource="{Binding FilteredAuthors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Filtr: Název -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber žánr:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchTextGenre, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl ItemsSource="{Binding FilteredGenres}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber jazyk:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchTextLanguages, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding FilteredLanguages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber nakladatale:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchTextPublisher, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding FilteredPublishers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Grid>


        <Grid Margin="284,176,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,10,31,0">
                <ItemsControl ItemsSource="{Binding MyItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel x:Name="MyPanel"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Define how each item should look -->
                            <Border Margin="5" Padding="10">
                                <local:CardView Title="{Binding Title}" Author="{Binding Author}" Height="{Binding Height}" Width="{Binding Width}" Genre ="{Binding Genre}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>




</UserControl>
