<UserControl x:Class="BookDatabase.Details.BookDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase.Details"
             mc:Ignorable="d" 
             Height="720" Width="1280">

    <Grid>
        <Image Width="260" Height="400" Margin="25,25,995,292" Source="{Binding ImageSource}"></Image>
        <TextBlock Margin="320,25,320,620" FontSize="50" x:Name="BookTitleBox">Tady Bude Nazev Knihy</TextBlock>
        <TextBlock Margin="320,118,320,527" FontSize="35" x:Name="AuthorNameBox">Tady Bude jmeno Autora</TextBlock>
        <TextBlock Margin="320,252,320,292" FontSize="35" x:Name="DescriptionBox">Tady Bude popis</TextBlock>
        <TextBlock Margin="28,458,612,86" FontSize="35" x:Name="RatingBox">Tady Bude zhodnocení</TextBlock>



        <StackPanel Margin="1010,0,0,0">
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" Margin="0,30,0,0">ŽÁNR:</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" x:Name="GenreBox">tu bude žánr</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10">TYP OBALU:</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" x:Name="TypeBox">tu bude typ obalu</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10">JAZYK</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" x:Name="LanguageBox">tu bude jazyk</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10">VYDAVATEL</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" x:Name="PublisherBox">tu bude vydavatel</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10">EAN</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" x:Name="EANBox">tu bude ean</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10">ISBN</TextBlock>
            <TextBlock Height="50" FontSize="16" HorizontalAlignment="Center" Padding="10" x:Name="ISBNBox">tu bude isbn</TextBlock>
        </StackPanel>
        
        
    </Grid>
</UserControl>
