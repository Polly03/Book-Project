<UserControl x:Class="BookDatabase.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDatabase"
        mc:Ignorable="d"  
        Height="720" Width="1280">

    <Grid>
        <!-- Main Control menu-->
        <Button Margin="0,0,1055,641" Width="225" FontSize="32" IsEnabled="false">Knihy</Button>
        <Button Margin="225,0,830,641" Width="225" FontSize="32" Click="OpenAuthors">Autoři</Button>
        <Button Margin="131,92,965,569" FontSize="32" Click="AddBookButton" >
            Přidat
        </Button>


        <Button Margin="515,10,572,647" FontSize="25" Click="StartSearchBook">Vyhledat</Button>
        <TextBox Margin="515,92,572,595" FontSize="20" x:Name="searchBar"></TextBox>
        <!-- Ordering element for book cards -->
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Margin="766,26,0,0">Seřadit podle:</TextBlock>
        <ComboBox Margin="937,27,127,660">
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="ABCasc">Abecedně (od A)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="ABCdsc">Abecedně (od Z)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="LENasc">Počet stran (od nejmenší)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="LENdsc">Počet stran (Od největší)</ComboBoxItem>
        </ComboBox>


        <Grid Margin="0,180,1018,10">
            <!-- GRID for filters panel-->
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Margin="0,0,0,25">

                    <StackPanel>
                        <Button Click="DeleteFilters">Smazat všechny filtry</Button>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber autora:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5"  Text="{Binding SearchAuthorsFilter, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl ItemsSource="{Binding AuthorsFilter}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>


                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber žánr:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" x:Name="genrees"  Text="{Binding SearchGenresFilter, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl ItemsSource="{Binding GenresFilter}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber jazyk:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchLanguagesFilters, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LanguagesFilter}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vyber nakladatale:" FontWeight="Bold" Margin="0,0,0,5" Width="200"/>
                        <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchPublishersFilter, UpdateSourceTrigger=PropertyChanged}"/>

                        <ScrollViewer Margin="10,0,0,0" Height="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PublishersFilters}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Grid>

        <!-- GRID for showing cards -->
        <Grid Margin="284,180,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="84*"/>
            </Grid.RowDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,0,31,20" Grid.RowSpan="2">
                <ItemsControl ItemsSource="{Binding BookCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel x:Name="MyPanel"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="10">
                                <local:CardView ImageSource="{Binding ImageSource}"  Title="{Binding Title}" Author="{Binding Author}" Genre ="{Binding Genre}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>

</UserControl>
