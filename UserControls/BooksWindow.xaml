<UserControl x:Class="BookDatabase.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDatabase"
        mc:Ignorable="d"  
        Height="720" Width="1280">

    <ScrollViewer Margin="0,0,12,0">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.RowSpan="1" Margin="10,20,10,10" Grid.Column="0" Grid.ColumnSpan="2" Height="60" HorizontalAlignment="Center">
                <!-- Main Control menu-->


                <Button Width="200" FontSize="32" IsEnabled="false" Margin="0,0,10,0" Foreground="White" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border  x:Name="border" Background="LightBlue" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    Knihy
                </Button>

                <Button Width="200" FontSize="32" Click="OpenAuthor"  Margin="10,0,0,0" Foreground="White" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border  x:Name="border" Background="MidnightBlue" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    Autoři
                </Button>

            </StackPanel>

            <Separator Margin="0,10,0,-1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#135E90"></Separator>

            <Border Grid.Column="0" Background="#195E98" Width="240" Grid.Row="2" >
                <StackPanel >
                    
                    <Button FontSize="25" Click="AddBookButton" Foreground="White" BorderThickness="0" Background="Transparent" Cursor="Hand" Margin="10,20,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#FF5A7EFF" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>
                               
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        Přidat Knihu
                    </Button>

                    <Separator Margin="10,20,10,20"></Separator>

                    <Button FontSize="25" Foreground="White" BorderThickness="0" Background="Transparent" Cursor="Hand" Margin="10,10,10,0" Click="StartSearchBook">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#FF5A7EFF" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>

                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        Vyhledat
                    </Button>

                    <TextBox Margin="10,10,10,10" FontSize="25" x:Name="searchBar"></TextBox>
                    <Separator Margin="10,20,10,20"></Separator>
                    <!-- Ordering element for book cards -->
                    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Margin="10,10,10,0" Foreground="White">Seřadit podle:</TextBlock>
                    <ComboBox Margin="10,10,10,10" FontSize="25">
                        <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="ABCasc">Abecedně (od A)</ComboBoxItem>
                        <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="ABCdsc">Abecedně (od Z)</ComboBoxItem>
                        <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="LENasc">Počet stran (od nejmenší)</ComboBoxItem>
                        <ComboBoxItem PreviewMouseLeftButtonDown="Order_MouseDown" x:Name="LENdsc">Počet stran (Od největší)</ComboBoxItem>
                    </ComboBox>
                    <Separator Margin="10,20,10,20"></Separator>
                    <Grid>
                        <!-- GRID for filters panel-->

                        <StackPanel Margin="0,0,0,25">

                            <Button FontSize="15" Margin="10" Click="DeleteFilters" Foreground="White" BorderThickness="0" Background="Transparent" Cursor="Hand" Height="30">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#FF5A7EFF" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>

                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                Smazat všechny filtry
                            </Button>


                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Vyber autora:" FontWeight="Bold" Margin="0,0,0,5" Width="200" FontSize="15" Foreground="White"/>
                                <TextBox Width="200" Margin="0,0,0,5"  Text="{Binding SearchAuthorFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="15"/>

                                <ScrollViewer Height="150" VerticalScrollBarVisibility="auto" Width="200">
                                    <ItemsControl ItemsSource="{Binding AuthorFilter}" Width="200">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Cursor="Hand" FontSize="15"  Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2" Foreground="White"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Vyber žánr:" FontWeight="Bold" Margin="0,0,0,5" Width="200" FontSize="15" Foreground="White"/>
                                <TextBox Width="200" Margin="0,0,0,5" x:Name="genrees"  Text="{Binding SearchGenresFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="15" />

                                <ScrollViewer Width="200" Height="150" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding GenresFilter}" Width="200">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Cursor="Hand"  Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2" FontSize="15" Foreground="White"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Vyber jazyk:" FontWeight="Bold" Margin="0,0,0,5" Width="200" Foreground="White"/>
                                <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchLanguagesFilters, UpdateSourceTrigger=PropertyChanged}"/>

                                <ScrollViewer Width="200" Height="150" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl Width="200" ItemsSource="{Binding LanguagesFilter}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Cursor="Hand"  Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2" Foreground="White"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Vyber nakladatale:" FontWeight="Bold" Margin="0,0,0,5" Width="200" Foreground="White"/>
                                <TextBox Width="200" Margin="0,0,0,5" Text="{Binding SearchPublishersFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                <ScrollViewer Width="200" Height="150" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl Width="200" ItemsSource="{Binding PublishersFilters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Cursor="Hand"  Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2" Foreground="White"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                        </StackPanel>

                    </Grid>
                </StackPanel>
            </Border>


           







            <!-- GRID for showing cards -->
            <Grid Grid.Column="1" Grid.Row="2" Margin="10,20,10,0" VerticalAlignment="Top">

                <ItemsControl x:Name="BooksItemsControl" ItemsSource="{Binding BookCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,10,10,20">
                                <local:CardView Image="{Binding Image}"  Title="{Binding Name}" Author="{Binding Author}" Genre ="{Binding Genre}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </ScrollViewer>
    

</UserControl>
