<local:UserControlLibrary x:Class="BookDatabase.AuthorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"

                          mc:Ignorable="d" 
          Height="720" Width="1280">
    
    <ScrollViewer Margin="0,0,12,0">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.RowSpan="1" Margin="10,20,10,10" Grid.Column="0" Grid.ColumnSpan="2" Height="60" HorizontalAlignment="Center">

                <Button Width="200" FontSize="32" Click="OpenBooks" IsEnabled="True" Margin="0,0,10,0" Foreground="White" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border  x:Name="border" Background="MidnightBlue" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    Knihy
                </Button>

                <Button Width="200" FontSize="32" IsEnabled="False"  Margin="10,0,0,0" Foreground="White" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border  x:Name="border" Background="LightBlue" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    Autoři
                </Button>
            </StackPanel>

            <Separator Margin="0,10,0,-1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#135E90"></Separator>

      

            <Border Grid.Column="0" Background="#195E98" Width="240" Grid.Row="2" >
                <StackPanel >

                    <Button FontSize="25" Click="AddAuthor" Foreground="White" BorderThickness="0" Background="Transparent" Cursor="Hand" Margin="10,20,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#FF5A7EFF" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>

                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    Přidat Autora
                </Button>

                <Separator Margin="10,20,10,20"></Separator>

                    <Button FontSize="25" Foreground="White" BorderThickness="0" Background="Transparent" Cursor="Hand" Margin="10,10,10,0" Click="StartSearchAuthor">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#FF5A7EFF" CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF1E3AFF"/>

                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        Vyhledat
                    </Button>

                    <TextBox Margin="10,10,10,10" FontSize="25" x:Name="SearchBar"></TextBox>
                    <Separator Margin="10,20,10,20"></Separator>


                    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Margin="10,10,10,0" Foreground="White">Seřadit podle:</TextBlock>
                    <ComboBox Margin="10,10,10,10" FontSize="25">
                        <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="ABCasc">Abecedně (od A)</ComboBoxItem>
                        <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="ABCdsc">Abecedně (od Z)</ComboBoxItem>
                        <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="Birthasc">Rok narození (od nejstaršího)</ComboBoxItem>
                        <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="Birthdsc">Rok narození (od nejmladšího)</ComboBoxItem>
                    </ComboBox>

                    <StackPanel Margin="0,0,0,20">
                        <Grid>
                            <StackPanel Margin="0,0,0,40">
                                <TextBlock FontSize="15" Text="Vyber Zemi původu:" FontWeight="Bold" Margin="0,0,0,5" Width="200" Foreground="White"/>
                                <TextBox FontSize="15" Width="200" Margin="0,0,0,5" Text="{Binding SearchCountryFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                <ScrollViewer Width="200" Height="500" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding CountryFilters}" Width="200">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Style="{StaticResource CustomCheckBox}" Cursor="Hand"  Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                   
                       

                </StackPanel>
            </Border>


            <Grid Grid.Column="1" Grid.Row="2" Margin="10,20,10,0" VerticalAlignment="Top">

                <ItemsControl ItemsSource="{Binding AuthorCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,10,10,20">
                                <local:CardViewAuthor AuthorName="{Binding Name}" DateOfBirth="{Binding DateOfBirth}" Country ="{Binding Country}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
</ScrollViewer>



</local:UserControlLibrary>

