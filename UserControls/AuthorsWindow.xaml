<UserControl x:Class="BookDatabase.AuthorsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"
             mc:Ignorable="d" 
          Height="720" Width="1280">

    <Grid>
        <Button Margin="0,0,1055,641" Width="225" FontSize="32" Cursor="Hand" Click="OpenBooks">Knihy</Button>
        <Button Margin="225,-1,830,642" Width="225" FontSize="32" IsEnabled="False">Autoři</Button>
        <Button Margin="131,92,965,569" FontSize="32" Cursor="Hand" Click="AddAuthor" >
            Přidat
        </Button>


        <Button Margin="515,10,572,647" FontSize="25" Cursor="Hand" Click="StartSearchAuthor">Vyhledat</Button>
        <TextBox Margin="515,92,572,595" FontSize="20" x:Name="SearchBar"></TextBox>

        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Margin="766,26,0,0">Seřadit podle:</TextBlock>
        <ComboBox Margin="937,27,127,660">
            <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="ABCasc">Abecedně (od A)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="ABCdsc">Abecedně (od Z)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="Birthasc">Rok narození (od nejstaršího)</ComboBoxItem>
            <ComboBoxItem PreviewMouseLeftButtonDown="OrderMouseDown" x:Name="Birthdsc">Rok narození (od nejmladšího)</ComboBoxItem>
        </ComboBox>


        <StackPanel Margin="0,176,1018,10">
            <TextBlock Text="Vyber Zemi původu:" FontWeight="Bold" Width="200" Margin="0,20,0,0"/>
            <TextBox Width="200" Margin="0,15,0,30" Text="{Binding SearchTextCountries, UpdateSourceTrigger=PropertyChanged}"/>

            <ScrollViewer Margin="10,0,0,20" VerticalScrollBarVisibility="Visible" Height="400" Width="252">
                <ItemsControl ItemsSource="{Binding FilteredCountries}" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Cursor="Hand"  Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>


        <Grid Margin="284,176,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,10,31,0">
                <ItemsControl ItemsSource="{Binding AuthorCards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel x:Name="MyPanel"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="10">
                                <local:CardViewAuthor NameOf="{Binding NameOf}" DateOfBirth="{Binding DateOfBirth}" Country ="{Binding Country}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>




</UserControl>

