<Window x:Class="BookDatabase.Windows.AddAuthorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDatabase.Windows"
        mc:Ignorable="d"
        Title="AddAuthorForm" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Width" Value="400"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Width" Value="400"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="Width" Value="400"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

            <Style TargetType="DatePicker">
                <Setter Property="Width" Value="400"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>


        </ResourceDictionary>
    </Window.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">
                <Button  Width="200" Height="50" FontSize="32" Click="Return"  Margin="0,0,150,0" Foreground="White" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border  x:Name="border" Background="#FF4040"  CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFFF0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    Zpět
                </Button>

                <Button  Width="200" Height="50" FontSize="32" Click="Accept"  Margin="150,0,0,0" Foreground="White" Cursor="Hand" x:Name="AcceptButton">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border  x:Name="border" Background="#11FF11"  CornerRadius="10" BorderBrush="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#11BB11"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    Potvrdit
                </Button>
            </StackPanel>
        

            <TextBlock FontSize="20" VerticalAlignment="Center">Zadejte jméno autora</TextBlock>
            <TextBox FontSize="20" MaxLength="64" x:Name="NameAuthor"/>

            <TextBlock FontSize="20" VerticalAlignment="Center">Zadejte přijímení autora</TextBlock>
            <TextBox FontSize="20" MaxLength="64" x:Name="SurNameAuthor"/>

            <TextBlock FontSize="20" VerticalAlignment="Center">Zadejte zemi původu</TextBlock>
            <ComboBox ItemsSource="{Binding Countries}" x:Name="CountriesBox" FontSize="20">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock FontSize="20" VerticalAlignment="Center">Zadejte datum narození</TextBlock>
            <DatePicker FontSize="20" DateValidationError="DatePicker_DateValidationError" SelectedDateChanged="MyDatePicker_SelectedDateChanged" x:Name="DateAuthor"/>

            <TextBlock FontSize="20" VerticalAlignment="Top" Margin="0,10,0,0">Zadejte popis autora</TextBlock>
            <TextBox FontSize="16" MinHeight="150" Height="auto" TextWrapping="Wrap" AcceptsReturn="True" x:Name="AboutAuthor"/>
        </StackPanel>
    </ScrollViewer>

</Window>
