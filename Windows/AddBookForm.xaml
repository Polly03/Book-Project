<Window x:Class="BookDatabase.AddBookForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BookDatabase"
        mc:Ignorable="d"
        Height="800" Width="1000"
        Title="AddBook"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Margin" Value="150,0,0,0"/>
                <Setter Property="FontSize" Value="32"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0,0,100,20"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="Margin" Value="20,20,20,20"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="Margin" Value="0,0,100,20"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0,0,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="120"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="120"/>
                <RowDefinition Height="Auto" MinHeight="160"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
                <RowDefinition Height="Auto" MinHeight="80"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" FontSize="32" Click="Return" Margin="0,0,250,60">Zrušit</Button>
            <Button Grid.Row="0" Grid.Column="1" FontSize="32" Margin="250,0,0,60">Potvrdit</Button>
            <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="25" Margin="350,0,350,70" Click="AddAuthorButton">Přidat nového autora</Button>

            <TextBlock Grid.Row="1" Grid.Column="0">Vybrat Autora</TextBlock>
            <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Authors}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="2" Grid.Column="0">Vyberte žánr</TextBlock>
            <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Genres}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="3" Grid.Column="0">Zadejte počet stran</TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" PreviewTextInput="Length_PreviewTextInput"/>

            <TextBlock Grid.Row="4" Grid.Column="0">Zadejte EAN</TextBlock>
            <TextBox Grid.Row="4" Grid.Column="1" MaxLength="13"/>

            <TextBlock Grid.Row="5" Grid.Column="0">Zadejte ISBN</TextBlock>
            <TextBox Grid.Row="5" Grid.Column="1" MaxLength="13"/>

            <TextBlock Grid.Row="6" Grid.Column="0">Vyberte Vydavatele</TextBlock>
            <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding Publishers}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="7" Grid.Column="0">Vyberte Jazyk</TextBlock>
            <ComboBox Grid.Row="7" Grid.Column="1" ItemsSource="{Binding Languages}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="8" Grid.Column="0">Zadejte název knihy</TextBlock>
            <TextBox Grid.Row="8" Grid.Column="1" MaxLength="64"/>

            <TextBlock Grid.Row="9" Grid.Column="0">Vyberte Typ knihy</TextBlock>
            <ComboBox Grid.Row="9" Grid.Column="1" ItemsSource="{Binding Type}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="10" Grid.Column="0">Zhodnocení</TextBlock>
            <TextBox Grid.Row="10" Grid.Column="1"/>

            <TextBlock Grid.Row="11" Grid.Column="0">Popis Knihy</TextBlock>
            <TextBox Grid.Row="11" Grid.Column="1"/>

            <Button Grid.Row="12" Grid.Column="0" FontSize="32" Margin="250,0,50,20">Vybrat fotku</Button>
            <TextBox Grid.Row="12" Grid.Column="1" IsReadOnly="True"/>
        </Grid>
    </ScrollViewer>
</Window>

