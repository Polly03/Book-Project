<UserControl x:Class="BookDatabase.AddBookForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Row 0: we will split this further -->
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Nested Grid in Row 0 (splitting it into columns or sub-rows) -->
            <Grid Grid.Row="0" MinHeight="400" MinWidth="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="100" />
                    <ColumnDefinition Width="auto" MinWidth="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" MinHeight="100"></RowDefinition>
                    <RowDefinition Height="auto" MinHeight="100"></RowDefinition>
                </Grid.RowDefinitions>

                <WrapPanel MinHeight="100" MinWidth="100">
                    <TextBlock Text="Left part of row 0" Grid.Column="0" Grid.Row="0"/>
                    <TextBox Grid.Column="0" Grid.Row="0"></TextBox>
                </WrapPanel>
                <WrapPanel MinHeight="100" MinWidth="100" Grid.Column="1" Grid.Row="1">
                    <TextBlock Text="SLOUPEC 1" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1"/>
                    <TextBox Grid.Column="1" Grid.Row="0"></TextBox>
                </WrapPanel>
                <WrapPanel MinHeight="100" MinWidth="100" Grid.Row="1">
                    <TextBlock Text="Left part of row 0" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Grid.Column="0" Grid.Row="1"></TextBox>
                </WrapPanel>
                <WrapPanel MinHeight="100" MinWidth="100" Grid.RowSpan="1" Grid.Column="1">
                    <TextBlock Text="Left part of row 0" Grid.Column="1" Grid.Row="1"/>
                    <TextBox Grid.Column="1" Grid.Row="1"></TextBox>
                </WrapPanel>

            </Grid>

            <!-- Other content in lower rows -->
            <TextBlock Grid.Row="1" Text="Row 1 content" />
            <TextBlock Grid.Row="2" Text="Row 2 content" />
            <TextBlock Grid.Row="3" Text="Row 3 content" />


        </Grid>
    </ScrollViewer>

</UserControl>
