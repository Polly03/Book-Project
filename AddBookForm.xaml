<UserControl x:Class="BookDatabase.AddBookForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"
             mc:Ignorable="d" 
             Height="720" Width="1280">
    <Grid>


                <Button Margin="0,0,1130,670" Click="Return">Zrušit</Button>
                <Button Margin="1130,0,0,670">Potvrdit</Button>

                <Button FontSize="20" Margin="93,101,1045,574">Vybrat fotku</Button>
                <TextBox Margin="49,160,1015,527" IsReadOnly="True"></TextBox>

                <TextBlock FontSize="20" Margin="378,101,766,588">Vyberte žánr</TextBlock>
                <ComboBox Margin="338,160,726,527" ItemsSource="{Binding Genres}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


                <TextBlock FontSize="20" Margin="63,598,1029,90" RenderTransformOrigin="0.498,0.688">zadejte počet stran</TextBlock>
                <TextBox Margin="49,640,1015,47" PreviewTextInput="Length_PreviewTextInput"></TextBox>

                <TextBlock FontSize="20" Margin="89,344,1055,344" RenderTransformOrigin="0.515,0.194">zadejte EAN</TextBlock>
                <TextBox Margin="49,381,1015,307" MaxLength="13"></TextBox>

                <TextBlock FontSize="20" Margin="89,471,1061,218">zadejte ISBN</TextBlock>
                <TextBox Margin="49,518,1015,169" MaxLength="13"></TextBox>

                <TextBlock FontSize="20" Margin="353,415,731,274">Vyberte Vydavatele</TextBlock>
                <ComboBox Margin="338,469,726,218" ItemsSource="{Binding Publishers}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock FontSize="20" Margin="378,547,756,142">Vyberte Jazyk</TextBlock>
                <ComboBox Margin="338,603,726,84" ItemsSource="{Binding Languages}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock FontSize="20" Margin="71,236,1023,452">zadejte název knihy</TextBlock>
                <TextBox Margin="49,273,1015,414" MaxLength="64"></TextBox>

                <TextBlock FontSize="20" Margin="393,253,781,436">Typ knihy</TextBlock>
                <ComboBox Margin="338,310,726,377"
                  ItemsSource="{Binding Type}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock FontSize="20" Margin="666,311,484,378">Zhodnocení</TextBlock>
                <TextBox Margin="847,258,40,325"></TextBox>

                <TextBlock FontSize="20" Margin="670,547,484,142">Popis Knihy</TextBlock>
                <TextBox Margin="847,452,40,47"></TextBox>

            <TextBlock FontSize="20" Margin="712,70,436,619">Vybrat Autora</TextBlock>
            <ComboBox Margin="670,121,394,566" ItemsSource="{Binding Languages}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Margin="944,112,186,558" FontSize="14">Přidat nového autora</Button>

    </Grid>
    
        

</UserControl>
