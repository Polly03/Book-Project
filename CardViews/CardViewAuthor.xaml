<UserControl x:Class="BookDatabase.CardViewAuthor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"
             mc:Ignorable="d" 
             Height="200" Width="150">
    
    <Border Background="AliceBlue"
        BorderThickness="1"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- stack panel for data binding in elements -->
            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <TextBlock Text="{Binding NameOf, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5" Height="53"/>
                <TextBlock Text="{Binding Country, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Height="24"/>
                <TextBlock Text="{Binding DateOfBirth, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Height="45"/>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
