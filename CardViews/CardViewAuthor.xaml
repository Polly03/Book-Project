<UserControl x:Class="BookDatabase.CardViewAuthor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"
             mc:Ignorable="d" 
             Height="350" Width="220">
    <Border Background="LightGray"
           BorderThickness="1"
           CornerRadius="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- stack panel for data binding in elements -->
            <StackPanel Grid.Row="1" Margin="10,10,10,10" >
                <TextBlock Cursor="Hand" MouseDown="ShowAuthor" Text="{Binding AuthorName, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5" Height="112"/>
                <TextBlock Cursor="Hand" MouseDown="ShowAuthor" Text="{Binding Country, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Height="73"/>
                <TextBlock Cursor="Hand" MouseDown="ShowAuthor" Text="{Binding DateOfBirth, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Height="96"/>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
