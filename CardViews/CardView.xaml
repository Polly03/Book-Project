<UserControl x:Class="BookDatabase.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase"
             mc:Ignorable="d" 
             Height="350" Width="250">
    
    <Border Background="AliceBlue"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <Image MouseDown="ShowBook" Height="150" Width="125" Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <Border Height="50">
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center"
                    FontSize="24" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5" MouseDown="ShowBook" Padding="3"/>
                </Border>
                <Border Height="50">
                    <TextBlock Text="{Binding Author, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center"
                     FontSize="18" FontWeight="Bold" TextWrapping="Wrap" MouseDown="ShowAuthor" Padding="3"/>
                </Border>
                <Border Height="40">
                   <TextBlock Text="{Binding Genre, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center"
                   FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Padding="3"/>
                </Border>
        </StackPanel>
        </Grid>
    </Border>
</UserControl>
