<UserControl x:Class="BookDatabase.Views.CardViewAuthor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookDatabase.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="150">
    <Border Background="AliceBlue"
        BorderThickness="1"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <TextBlock Text="{Binding NameOf, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5" Height="26"/>
                <TextBlock Text="{Binding Country, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Height="38"/>
                <TextBlock Text="{Binding Date, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Height="52"/>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
